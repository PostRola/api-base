{
  "name": "@webf/base",
  "version": "0.2.0",
  "description": "Hono helper modules",
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    "./auth": "./dist/auth/auth.js",
    "./auth/core/*": "./dist/auth/core/*.js",
    "./auth/migrator": "./dist/auth/db/migrator.js",
    "./auth/provider": "./dist/auth/oauth/providers.js",
    "./auth/type": "./dist/auth/type.js",
    "./schema/*": "./dist/schema/*.js"
  },
  "scripts": {
    "check:types": "tsc",
    "check:cycles": "tsx ./scripts/cycles.ts",
    "dev": "dotenv -- tsx ./src/main.ts",
    "dev:pack": "tsx ./scripts/pack.ts",
    "prebuild": "rimraf ./dist",
    "build": "tsc -p ./tsconfig.build.json",
    "generate": "drizzle-kit generate:pg",
    "test": "NODE_OPTIONS='--import tsx' node --test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/webf-run/api-base.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/webf-run/api-base/issues"
  },
  "homepage": "https://github.com/webf-run/api-base#readme",
  "volta": {
    "node": "20.10.0"
  },
  "peerDependencies": {
    "postgres": "^3.4.3"
  },
  "dependencies": {
    "@hono/node-server": "^1.3.2",
    "argon2": "^0.31.2",
    "crypto-random-string": "^5.0.0",
    "drizzle-orm": "^0.29.2",
    "hono": "^3.11.11",
    "nanoid": "^5.0.4",
    "oauth4webapi": "^2.4.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/madge": "^5.0.3",
    "@types/node": "^20.10.2",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.3.0",
    "drizzle-kit": "^0.20.9",
    "glob": "^10.3.10",
    "madge": "^6.1.0",
    "postgres": "^3.4.3",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
